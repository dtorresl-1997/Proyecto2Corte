<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/jakartaee/persistence_4_0.xsd"
             version="3.0">

    <persistence-unit name="estudiantesPU">

        <properties>
            <!-- ConfiguraciÃ³n JDBC -->

            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/universidad?serverTimezone=UTC" />
            <property name="jakarta.persistence.jdbc.user" value="root_db" />
            <property name="jakarta.persistence.jdbc.password" value="admin" />
            <property name="jakarta.persistence.schema-generation.database.action" value="none" />
        </properties>
    </persistence-unit>
</persistence>
